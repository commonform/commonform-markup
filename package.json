{
  "name": "commonform-markup",
  "description": "write form contracts in plain text",
  "version": "0.4.0",
  "author": "Kyle E. Mitchell <kyle@kemitchell.com> (http://kemitchell.com)",
  "bugs": "https://github.com/commonform/commonform-markup/issues",
  "dependencies": {
    "keyarray-get": "^0.1.0",
    "last-index-matching": "^1.0.0"
  },
  "devDependencies": {
    "chai": "^2.2.0",
    "check-versions": "^1.0.0",
    "commonform-validate": "^0.4.0",
    "istanbul": "^0.3.5",
    "jscs": "^1.8.1",
    "jshint": "^2.5.10",
    "mocha": "^2.0.1"
  },
  "homepage": "https://commonform.github.io",
  "keywords": [
    "contracts",
    "document assembly",
    "knowledge management",
    "law",
    "markup"
  ],
  "license": "Apache-2.0",
  "main": "source/index",
  "peerDependencies": {
    "commonform": "1.x"
  },
  "repository": "commonform/commonform-markup",
  "scripts": {
    "check": "check-versions --check-module",
    "coverage": "istanbul check-coverage --config .dotfiles/istanbul.yml coverage/coverage.json",
    "lint": "jshint --config .dotfiles/jshint.json source test && jscs --config .dotfiles/jscs.json source test",
    "precommit": "npm run check && npm run lint && npm run coverage",
    "precoverage": "istanbul cover --config .dotfiles/istanbul.yml -- _mocha --opts .dotfiles/mocha.opts",
    "test": "mocha --opts .dotfiles/mocha.opts"
  }
}
